<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    android:padding="16dp">



    <!-- Seats: 8 dropdowns. Seat 1 is the dealer selection for the round. -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <!-- Header removed to keep UI compact; start with the first dropdown -->

            <!-- Create 8 exposed dropdowns -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                android:id="@+id/row_seat1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seat 1"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_gravity="center_vertical"
                    android:paddingEnd="8dp" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="Name">

                    <AutoCompleteTextView
                        android:id="@+id/seat1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapWords"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:textColor="@android:color/black"
                        android:textColorHint="#88000000"
                        android:background="@drawable/autocomplete_bg"
                        android:popupBackground="@drawable/autocomplete_bg" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <!-- Seats 2..8 -->
            <LinearLayout
