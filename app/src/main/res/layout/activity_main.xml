<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    android:padding="16dp">



    <!-- Seats: 8 dropdowns. Seat 1 is the dealer selection for the round. -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <!-- Header removed to keep UI compact; start with the first dropdown -->

            <!-- Create 8 exposed dropdowns -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Seat 1"
                android:layout_marginBottom="8dp">

                <AutoCompleteTextView
                    android:id="@+id/seat1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:textColor="@android:color/black"
                    android:textColorHint="#88000000"
                    android:background="@drawable/autocomplete_bg"
                    android:popupBackground="@drawable/autocomplete_bg" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Seats 2..8 -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Seat 2"
                android:layout_marginBottom="8dp">

                <AutoCompleteTextView
                    android:id="@+id/seat2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:textColor="@android:color/black"
                    android:textColorHint="#88000000"
                    android:background="@drawable/autocomplete_bg"
                    android:popupBackground="@drawable/autocomplete_bg" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Seat 3"
                android:layout_marginBottom="8dp">

                <AutoCompleteTextView
                    android:id="@+id/seat3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:textColor="@android:color/black"
                    android:textColorHint="#88000000"
                    android:background="@drawable/autocomplete_bg"
                    android:popupBackground="@drawable/autocomplete_bg" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Seat 4"
                android:layout_marginBottom="8dp">

                <AutoCompleteTextView
                    android:id="@+id/seat4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:textColor="@android:color/black"
                    android:textColorHint="#88000000"
                    android:background="@drawable/autocomplete_bg"
                    android:popupBackground="@drawable/autocomplete_bg" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Seat 5"
                android:layout_marginBottom="8dp">

                <AutoCompleteTextView
                    android:id="@+id/seat5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:textColor="@android:color/black"
                    android:textColorHint="#88000000"
                    android:background="@drawable/autocomplete_bg"
                    android:popupBackground="@drawable/autocomplete_bg" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Seat 6"
                android:layout_marginBottom="8dp">

                <AutoCompleteTextView
                    android:id="@+id/seat6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:textColor="@android:color/black"
                    android:textColorHint="#88000000"
                    android:background="@drawable/autocomplete_bg"
                    android:popupBackground="@drawable/autocomplete_bg" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Seat 7"
                android:layout_marginBottom="8dp">

                <AutoCompleteTextView
                    android:id="@+id/seat7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:textColor="@android:color/black"
                    android:textColorHint="#88000000"
                    android:background="@drawable/autocomplete_bg"
                    android:popupBackground="@drawable/autocomplete_bg" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Seat 8"
                android:layout_marginBottom="8dp">

                <AutoCompleteTextView
                    android:id="@+id/seat8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:textColor="@android:color/black"
                    android:textColorHint="#88000000"
                    android:background="@drawable/autocomplete_bg"
                    android:popupBackground="@drawable/autocomplete_bg" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnStartGame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/start_game"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="12dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        style="@style/Widget.Material3.Button.UnelevatedButton" />

</LinearLayout>